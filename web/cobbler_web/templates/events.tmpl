{% extends "master.tmpl" %}

{% block content %}

{% if results %}
<fieldset>
  <legend>Events</legend>
  <hr/>
  <table id="listitems" cellspacing="0">
    <thead>
      <tr>
        <th>Start Time</th>
        <th>Name</th>
        <th>State</th>
        <th>Log</th>
      </tr>
    </thead>
    <tbody>
      {% for line in results %}
      <tr class="{% cycle 'rowodd' 'roweven' %}">
        <td>{{ line.1|safe }}</td>
        <td>{{ line.2|safe }}</td>
        <td>{{ line.3|safe }}</td>
        <td><a href="/cobbler_web/eventlog/{{ line.0 }}">log</a></td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</fieldset>
{% else %}
<h3>No events</h3>
{% endif %}

{% endblock %}
